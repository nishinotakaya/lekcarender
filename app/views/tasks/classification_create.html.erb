<div class = "task-all">
  <%= form_with model: @soko_total, url:classification_create_submit_tasks_path(@soko_total), methd: :post, class: "form-horizontal"  do |f| %>
    <div class="field">
      <%= f.label "分類" %><br />
      <%= f.text_field :classification, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div> 
    <div class="field">
      <%= f.submit "追加", class: "btn btn-primary" %>
    </div>  
  <% end %>

  <table class= "task-create">
    <tr>
      <th>分類</th>
      <th></th>
    </tr>
    <% @soko_total.map do |a| %>
    <tr> 
      <td><%= a.classification %></td>
      <td><%= link_to '削除', classification_delete_submit_task_path(a), method: :delete, data: { confirm: '削除しますか?' }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>
</div>
