<div class="clinets_all">
  <p id="notice"><%= notice %></p>

  <h2>利用者一覧</h2>

  <table class= "table-clients">
    <thead>
      <tr>
        <th>名前</th>
        <th>誕生日</th>
        <th>利用日</th>
        <th>String</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <% if client.birthday.present? %>
          <td><%= client.birthday.strftime("%Je%Jg年%m月%d日") %>【<%= age(client.birthday) %>歳】</td>
          <% end %>
          <td><%= client.use_day %></td>
          <td><%= client.string %></td>
          <td><%= link_to '詳細', client %></td>
          <td><%= link_to '編集', edit_client_path(client) %></td>
          <td><%= link_to '削除', client, method: :delete, data: { confirm: '削除しますか?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '利用者追加', new_client_path %>
</div>
