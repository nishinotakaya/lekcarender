<%= form_with(model: @blog, local: true) do |form| %>

  <div class="title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :content_1 %>
    <%= form.text_field :content_1 %>
  </div>

  <div class="content">
    <%= form.label :content_2 %>
    <%= form.text_field :content_2 %>
  </div>

  <div class="content">
    <%= form.label :content_3 %>
    <%= form.text_field :content_3 %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>
