<p id="notice"><%= notice %></p>
<div class ="lek-url-all">
<%= link_to 'レク追加', new_lek_url_path, class: "btn btn-success new_client_btn" %>
<%= link_to 'カレンダーに戻る', blogs_path,  class: "btn btn-primary new_client_btn" %>
 
  <h1>参考URL一覧</h1>
  <table class="lek-table">
    <thead>
      <tr>
        <th>種類</th>
        <th>参考Url（詳細）</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @lek_urls.each do |lek_url| %>
        <tr>
          <td><%= lek_url.name %></td>
          <td><%= simple_format(text_url_to_link(h(lek_url.url)), {}, sanitize: false) %></td>
          <td><%= link_to '詳細', lek_url, class: "btn btn-primary" %></td>
          <td><%= link_to '編集', edit_lek_url_path(lek_url), class: "btn btn-success" %></td>
          <td><%= link_to '削除', lek_url, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
  <br>
  <%= link_to 'レク追加', new_lek_url_path, class: "btn btn-success new_client_btn" %>
  <%= link_to 'カレンダーに戻る', blogs_path,  class: "btn btn-primary new_client_btn" %>
</div>
