<p id="notice"><%= notice %></p>
<div class= "container">
  <h1>システム概要一覧</h1>
  <%= form_with(scope: :search_language, url: languages_path, method: :get, local: true ) do |f| %>
    <%= f.label "システム名" %>
    <%= f.text_field :title, value: @search_language_params[:title], class: "form-control" %>
    <%= f.label "種類" %>
    <%= f.text_field :meaning, value: @search_language_params[:meaning], class: "form-control" %>
    <br><%= f.submit "検索" ,class: "btn btn-primary name_search_btn" %>
  <% end %>
</div>
<%= link_to 'システム概要追加', new_language_path %>
 <div><%= paginate @languages %></div>
<table>
  <thead>
    <tr>
      <th>システム名</th>
      <th>種類</th>
      <th>詳細||画像</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.title %></td>
        <td><%= language.meaning %></td>
        <td><%= language.content %></td>
        <td><%= link_to '詳細', language %>
        <%= link_to '編集', edit_language_path(language) %>
        <%= link_to '削除', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'システム概要追加', new_language_path %>
